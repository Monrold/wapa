---
const { eventName = "PageView", customData = {} } = Astro.props;
const eventNameJSON = JSON.stringify(eventName);
const customDataJSON = JSON.stringify(customData);
---

<div id="fb-events"
     data-event-name={eventNameJSON}
     data-custom-data={customDataJSON}></div>

<script is:inline>
document.addEventListener("DOMContentLoaded", () => {
  const container = document.getElementById("fb-events");

  try {
    const eventName = JSON.parse(container.dataset.eventName);
    const customData = JSON.parse(container.dataset.customData);

    const eventId = `pgvw-${crypto.randomUUID()}`;
    console.log("üì§ Disparando PageView:", eventName, customData, "ID:", eventId);

    function getCookie(name) {
      const match = document.cookie.match(new RegExp("(^| )" + name + "=([^;]+)"));
      return match ? match[2] : null;
    }

    if (window.fbq) {
      fbq("track", eventName, {
        ...customData,
        event_id: eventId,
      });
      console.log("‚úÖ Pixel navegador enviado con ID:", eventId);
    } else {
      console.warn("‚ö†Ô∏è Pixel no definido (window.fbq)");
    }

    fetch("https://metaevents.soporte-draw.workers.dev", {
      method: "POST",
      headers: { 
        "Content-Type": "application/json", 
        Accept: "application/json" 
      },
      body: JSON.stringify({
        event_name: eventName,
        event_time: Math.floor(Date.now() / 1000),
        action_source: "website",
        event_source_url: window.location.href,
        user_data: {
          client_ip_address: "NO_HASH_IP",
          client_user_agent: navigator.userAgent,
          fbp: getCookie("_fbp"),
          fbc: getCookie("_fbc"),
        },
        custom_data: customData,
        event_id: eventId,
      }),
    }).catch((err) => console.error("‚ùå Error CAPI PageView:", err));

  } catch (err) {
    console.error("‚ùå Error al disparar PageView:", err);
  }
});
</script>
