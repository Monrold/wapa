<script>
    const detailsElements = document.querySelectorAll(
        "#faq-home-container details",
    );

    (detailsElements as NodeListOf<HTMLDetailsElement>).forEach((detail) => {
        const summary = detail.querySelector(".faq-home-summary")!;
        const sign = summary.querySelector(".faq-home-toggle-sign")!;

        function updateSign() {
            if (detail.open) {
                sign.textContent = "−";
            } else {
                sign.textContent = "+";
            }
        }

        summary.addEventListener("click", () => {
            if (!detail.open) {
                detailsElements.forEach((otherDetail) => {
                    if (otherDetail !== detail) {
                        (otherDetail as HTMLDetailsElement).removeAttribute(
                            "open",
                        );
                        const otherSign = otherDetail.querySelector(
                            ".faq-home-summary .faq-home-toggle-sign",
                        );
                        if (otherSign) otherSign.textContent = "+";
                    }
                });
            }
            setTimeout(updateSign, 0);
        });

        updateSign();
    });
</script>
