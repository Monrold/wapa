            .nested-summary {
                cursor: pointer;
                background: white;
                padding: 0.5rem 1rem;
                width: 100%;
                text-align: left;
            }

            .nested-summary:focus,
            .nested-summary:hover {
                color: #ca8a04;
                background: #fefaf3;
            }

            .nested-dropdown.open > .nested-summary {
                background: #fefaf3;
                /* box-shadow: 0 0 0 2px #fde68a; */ /* Quitar borde amarillo */
            }

            .nested-angle {
