        </style>

        <script>
            // @ts-nocheck
            document.querySelectorAll(".nested-summary").forEach((summary) => {
                summary.addEventListener("click", () => {
                    const currentDropdown = summary.parentElement;
                    const parentContainer = currentDropdown.parentElement;

                    // Cierra todos los dem√°s dropdowns
                    const siblingDropdowns = parentContainer.querySelectorAll(
                        ":scope > .nested-dropdown",
                    );

                    siblingDropdowns.forEach((dropdown) => {
                        if (dropdown !== currentDropdown) {
                            dropdown.classList.remove("open");
                            const icon =
                                dropdown.querySelector(".nested-angle");
                            if (icon) icon.style.transform = "rotate(0deg)";
                            const content =
                                dropdown.querySelector(".nested-content");
                            if (content) content.style.maxHeight = "0";
                        }
                    });

                    // Toggle el actual
                    currentDropdown.classList.toggle("open");
                    const angleIcon = summary.querySelector(".nested-angle");
                    const content =
                        currentDropdown.querySelector(".nested-content");

                    if (currentDropdown.classList.contains("open")) {
                        angleIcon.style.transform = "rotate(90deg)";
                        if (content) {
                            // Para evitar corte, primero lo ponemos sin altura para forzar reflow
                            content.style.maxHeight = "0"; // Reset
                            requestAnimationFrame(() => {
                                content.style.maxHeight = "4000px"; // o incluso 2000px si es muy largo
                            });
                        }
                    } else {
                        angleIcon.style.transform = "rotate(0deg)";
                        if (content) content.style.maxHeight = "0";
                    }
                });

                summary.addEventListener("keydown", (e) => {
                    if (e.key === "Enter" || e.key === " ") {
                        e.preventDefault();
                        summary.click();
                    }
                });
            });
