<script>
    // @ts-nocheck
    document.addEventListener("DOMContentLoaded", () => {
        const dropdowns = document.querySelectorAll(".mi-dropdown");
        dropdowns.forEach((dropdown) => {
            const summary = dropdown.querySelector(".mi-summary");
            const content = dropdown.querySelector(".mi-list");
            const angle = summary.querySelector(".mi-angle");

            // Estado inicial cerrado
            if (content) {
                content.style.maxHeight = "0";
            }
            if (angle) {
                angle.style.transform = "";
            }

            summary.addEventListener("click", () => {
                const isOpen = dropdown.classList.contains("open");
                // Cierra todos los hermanos
                dropdowns.forEach((other) => {
                    if (other !== dropdown) {
                        other.classList.remove("open");
                        const otherContent = other.querySelector(".mi-list");
                        const otherAngle = other.querySelector(".mi-angle");
                        if (otherContent) {
                            otherContent.style.maxHeight = "0";
                        }
                        if (otherAngle) {
                            otherAngle.style.transform = "";
                        }
                    }
                });
                // Toggle actual
                if (isOpen) {
                    dropdown.classList.remove("open");
                    if (content) {
                        content.style.maxHeight = "0";
                    }
                    if (angle) angle.style.transform = "";
                } else {
                    dropdown.classList.add("open");
                    if (content) {
                        content.style.maxHeight = content.scrollHeight + "px";
                    }
                    if (angle) angle.style.transform = "rotate(90deg)";
                }
            });

            summary.addEventListener("keydown", (e) => {
                if (e.key === "Enter" || e.key === " ") {
                    e.preventDefault();
                    summary.click();
                }
            });
        });
    });
</script>
