---
import Layout from "../../layouts/Layout.astro";
import alaciado from "../../images/index/alaciado.webp";
import botox from "../../images/index/botox.webp";
import encerado from "../../images/encerado.jpg";
import Otrosproductos from "../../components/tienda/otrosproductos.astro";
---

<Layout
    title="Keratina para Cabello Maltratado y Deshidratado | Alisado y Reparación Profunda"
    description="Tratamiento ideal para cabello muy maltratado y deshidratado. Relaja ondas y repara la fibra capilar, devolviendo salud, hidratación y suavidad al cabello dañado."
    lightColor={true}
    isIndexable={true}
>
    <section class="bg-white">
        <!-- Detalle del producto -->
        <div class="max-w-screen-lg px-4 mx-auto pb-4 mt-10">
            <a href="/" class="hover:text-[#917763]">
                <span>&larr;</span> Ir a al home</a
            >
        </div>

        <div
            class="max-w-screen-lg mx-auto pb-12 px-4 grid grid-cols-1 md:grid-cols-2 gap-8"
        >
            <!-- Carrusel de imágenes -->
            <div class="relative">
                <div class="carousel lg:h-[70vh]">
                    <img
                        src={encerado.src}
                        alt="Producto imagen 1"
                        class="w-full h-84 md:h-full object-cover rounded-lg shadow-md"
                    />
                    <!-- Agrega más imágenes al carrusel aquí -->
                </div>
            </div>

            <!-- Información del producto -->
            <div >
                <h1 class="text-xs  text-yellow-500">Keratina para cabello</h1>
                <h2 class="text-3xl font-bold">Nanobotox</h2>
                <p class="text-gray-700 mt-2 mb-8">
                    Para cabello muy maltratado, deshidratado y para relajar
                    ondas.
                </p>
                <div class="space-y-6">
                    <div class="">
                        <div id="accordion-collapse" data-accordion="collapse">
                            <h2 id="accordion-collapse-heading-1">
                                <button
                                    type="button"
                                    class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-700 border border-b-0 border-gray-300 rounded-t-xl focus:ring-4 focus:ring-gray-100 hover:bg-gray-50 gap-3"
                                    data-accordion-target="#accordion-collapse-body-1"
                                    aria-expanded="true"
                                    aria-controls="accordion-collapse-body-1"
                                >
                                    <span>¿Qué beneficios tiene?</span>
                                    <svg
                                        data-accordion-icon
                                        class="w-3 h-3 rotate-180 shrink-0"
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 10 6"
                                    >
                                        <path
                                            stroke="currentColor"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5 5 1 1 5"></path>
                                    </svg>
                                </button>
                            </h2>
                            <div
                                id="accordion-collapse-body-1"
                                class="hidden"
                                aria-labelledby="accordion-collapse-heading-1"
                            >
                                <div
                                    class="p-5 border border-b-0 border-gray-300 bg-gray-50"
                                >
                                    <ul class="list-disc pl-5 text-gray-700">
                                        <li>Alisa 70% a 90%</li>
                                        <li>Hidrata</li>
                                        <li>Elimina el Frizz</li>
                                        <li>Aumenta el brillo</li>
                                        <li>Aumenta sedosidad</li>
                                        <li>
                                            Ideal para decoloraciones de +4
                                            semanas
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <h2 id="accordion-collapse-heading-2">
                                <button
                                    type="button"
                                    class="flex items-center justify-between w-full p-5 font-medium rtl:text-right text-gray-700 border border-b-0 border-gray-300 focus:ring-4 focus:ring-gray-100 hover:bg-gray-50 gap-3"
                                    data-accordion-target="#accordion-collapse-body-2"
                                    aria-expanded="false"
                                    aria-controls="accordion-collapse-body-2"
                                >
                                    <span>Duración y rendimiento</span>
                                    <svg
                                        data-accordion-icon
                                        class="w-3 h-3 rotate-180 shrink-0"
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        fill="none"
                                        viewBox="0 0 10 6"
                                    >
                                        <path
                                            stroke="currentColor"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5 5 1 1 5"></path>
                                    </svg>
                                </button>
                            </h2>
                            <div
                                id="accordion-collapse-body-2"
                                class="hidden"
                                aria-labelledby="accordion-collapse-heading-2"
                            >
                                <div
                                    class="p-5 border border-b-0 border-gray-300 bg-gray-50"
                                >
                                    <div class="flex items-center pl-1">
                                        <svg
                                            class="w-4 fill-gray-500"
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 512 512"
                                            ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
