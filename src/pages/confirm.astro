---
import Layout from '../layouts/Layout.astro';
---

<Layout
    title="Lista de precios"
    description="Descubre los mejores servicios en wapa studio"
    lightColor={true}
>
    <main
        class="py-20 bg-[#eeefeb] min-h-screen flex justify-center items-center pt-32"
    >
        <div class="bg-white rounded-lg shadow-lg w-full max-w-lg overflow-hidden mx-4">
            <!-- Imagen -->
            <div
                class="h-48 bg-cover bg-center"
                style="background-image: url('https://media.wapastudio.com/confirm-mail-wapa.webp');"
            ></div>
            <!-- Contenido -->
            <div class="p-8">
                <h1 class="text-3xl font-bold text-center text-gray-800 mb-4">
                    ¡Correo confirmado con éxito!
                </h1>
                <p class="text-center text-gray-600 mb-6">
                    Tu correo electrónico ha sido confirmado con éxito. Ahora puedes
                    iniciar sesión en tu cuenta
                </p>
                <div class="text-center">
                    <a
                        href="/signin"
                        class="inline-block px-6 py-3 bg-[#917763] text-white font-semibold rounded-md hover:bg-[#6A5341] transition-colors"
                    >
                        Iniciar sesión
                    </a>
                </div>
            </div>
        </div>
    </main>
</Layout>
