---
// Archivo: src/layouts/CourseLayout.astro

interface Props {
  title: string;
  description: string;
  currentStep?: number; // Opcional
  totalSteps?: number;  // Opcional
}

const { title, description, currentStep = 0, totalSteps = 1 } = Astro.props as Props;
---

<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - Curso</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-gray-100 text-gray-900 font-sans">
    <div class="course-layout">
      <header class="course-header bg-gray-200 p-4">
        <h1 class="text-2xl font-semibold text-gray-800">{title}</h1>
        <p class="text-gray-600">{description}</p>
        <div class="progress mt-4">
          <div class="bg-gray-300 h-2 rounded">
            <div
              class="bg-blue-600 h-2 rounded"
              style={`width: ${(currentStep / totalSteps) * 100}%`}
            ></div>
          </div>
          <p class="mt-2 text-sm text-gray-500">{currentStep} de {totalSteps} pasos completados</p>
        </div>
      </header>
      <main class="course-content">
        <slot /> <!-- Este espacio renderiza el contenido pasado -->
      </main>
    </div>
  </body>
</html>
